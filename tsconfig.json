{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2022",
    "module": "NodeNext",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf",
    "paths": {
      "@markemer/automate": ["automate/src/index.ts"]
    }
  }
}
